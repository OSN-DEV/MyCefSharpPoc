<Window x:Class="MyCefSharpPoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCefSharpPoc"
        mc:Ignorable="d"
        xmlns:cs="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <cs:ChromiumWebBrowser Grid.Row="0"
                          x:Name="cBrowser" AllowDrop="True" Drop="cBrowser_Drop" DragEnter="cBrowser_DragEnter" />
    </Grid>
</Window>
